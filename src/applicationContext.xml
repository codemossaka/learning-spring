<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- <context:component-scan base-package="com.in28minutes.spring.basics"/> -->
	<context:property-placeholder location="classpath:sport.properties"/>

	<bean id="myFortuneService" class="ru.godsonpeya.spring.HappyForTuneService">
	</bean>
	<bean id="myCrickedCoach" class="ru.godsonpeya.spring.CrickedCoach">
		<property name="fortuneService" ref="myFortuneService"/>
		<property name="emailAdress" value="${foo.email}"/>
		<property name="team" value="${foo.team}" />
	</bean>
	<bean id="myCoach" class="ru.godsonpeya.spring.TrackCoach">
		<constructor-arg ref="myFortuneService"/>
	</bean>


</beans>